class MyCompositeWidget : public WCompositeWidget {
public:
    MyCompositeWidget(WContainerWidget* parent=0):
        WCompositeWidget(parent)
    { }

protected:
    WWidget* implementation() {
        return impl_;
    }

    void setImplementation(WWidget* widget) {
        impl_ = widget;
        WCompositeWidget::setImplementation(widget);
    }

private:
    WWidget* impl_;
};
